@using BlazorApp1.Client.Shared.Components

@if (IsLoading)
{
    <div class="loading-screen">
        <div class="loading-content">
            <div class="spinner-dots large warning">
                <div class="dot1"></div>
                <div class="dot2"></div>
                <div class="dot3"></div>
            </div>
            <div class="loading-text">@LoadingMessage</div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public string LoadingMessage { get; set; } = "Loading...";
} 