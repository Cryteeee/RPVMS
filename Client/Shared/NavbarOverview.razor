        border-radius: 8px;
        padding: 0.5rem;
        transition: all 0.3s ease;
    }

    .navbar-toggler:hover {
        background: rgba(255, 193, 7, 0.2);
    }

    .navbar-nav {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background-color: rgba(255,200,44,0.95);
        padding: 1rem;
        align-items: flex-start;
        gap: 0.5rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        border-radius: 16px;
        margin-top: 0.5rem;
        flex-direction: column;
