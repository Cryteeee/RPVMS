/*Navbar CSS*/
.navbar-container
{
    position:sticky;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    display:flex;
    align-items:center;
    justify-content:start;
    background:white;
    width:100%;
    height:6.5rem;
    padding:0rem;
    margin:0rem;
    transition: all 0.3s ease;
    z-index: 1000;
}
.navbar {
    padding: 0.75rem 1.5rem;
    height: 6.5rem;
    display: flex;
    align-items:center;
    justify-content:right;
    position: sticky;
    top: 0;
    background-color: rgba(255,255,255,1);
    width: 100%;
    margin-bottom: 1rem;
    border-radius: 16px;
    transition: all 0.3s ease;
}
.navbar-brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration:none;
    white-space: nowrap;
    box-shadow:rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
}

.navbar-brand:hover {
    transform: scale(1.05);
}

.navbar-brand img {
    height:10rem;
    width: auto;
    transition: all 0.3s ease;
}

.navbar-brand:hover img {
    filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
}
.navbar-toggler {
    display: none;
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color:black;
    font-size: 1.5rem;
}

.navbar-nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
    list-style: none;
}

.nav-item {
    display:none;
}

.nav-link {
    color: black;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.nav-link.active {
    color: rgba(255,200,44,1);
    background-color: rgba(255,200,44,0.2);
    
}

.nav-link:hover {
    color:rgba(255,200,44,1);
    background-color:rgba(255,200,44,0.2);
    
}

.nav-link i {
    font-size: 1rem;
    transition: all 0.3s ease;
}

/* Icon Animations */
.nav-link i.fa-info-circle {
    transition: transform 0.3s ease;
}

.nav-link:hover i.fa-info-circle {
    animation: infoSpin 1s ease-in-out;
}

.nav-link i.fa-envelope {
    transition: transform 0.3s ease;
}

.nav-link:hover i.fa-envelope {
    animation: envelopeBounce 0.8s ease-in-out;
}

.nav-link i.fa-users {
    transition: transform 0.3s ease;
}

.nav-link:hover i.fa-users {
    animation: usersWave 0.8s ease-in-out;
}

.nav-link i.fa-cogs {
    transition: transform 0.3s ease;
}

.nav-link:hover i.fa-cogs {
    animation: cogsSpin 1.5s linear infinite;
}

.nav-link i.fa-sign-out-alt,
.nav-link i.fa-sign-in-alt {
    transition: transform 0.3s ease;
}

.nav-link:hover i.fa-sign-out-alt,
.nav-link:hover i.fa-sign-in-alt {
    animation: signSlide 0.5s ease-in-out;
}

/* Footer Icon Animations */
footer .footer-links a i {
    transition: all 0.3s ease;
}

footer .footer-links a:hover i {
    animation: footerIconPop 0.5s ease-in-out;
}

/* Animation Keyframes */
@@keyframes infoSpin {
    0% { transform: rotate(0deg); }
    50% { transform: rotate(180deg) scale(1.2); }
    100% { transform: rotate(360deg); }
}

@@keyframes envelopeBounce {
    0%, 100% { transform: translateY(0); }
    25% { transform: translateY(-5px) rotate(-5deg); }
    50% { transform: translateY(0) rotate(0deg); }
    75% { transform: translateY(-3px) rotate(5deg); }
}

@@keyframes usersWave {
    0% { transform: scale(1); }
    25% { transform: scale(1.2) translateY(-2px); }
    50% { transform: scale(1.1) translateY(1px); }
    75% { transform: scale(1.15) translateY(-1px); }
    100% { transform: scale(1); }
}

@@keyframes cogsSpin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

@@keyframes signSlide {
    0% { transform: translateX(0); }
    50% { transform: translateX(5px); }
    100% { transform: translateX(0); }
}

@@keyframes footerIconPop {
    0% { transform: scale(1); }
    50% { transform: scale(1.2) rotate(5deg); }
    100% { transform: scale(1); }
}

@@media screen and (max-width: 805px) {
    .navbar {
